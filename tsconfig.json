{
    "compilerOptions": {
        "strict": true,
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@gi-types"
            "resource:///org/gnome/shell"
        ],
        "types": [
            "gjs-environment",
            "base-types",
            "gtk4-types",
            "node"
        ],
        "lib": [
            "ES2022"
        ],
        "allowSyntheticDefaultImports": true,
        "rootDir": "./",
        "outDir": "./build",
        "target": "ES6",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "paths": {
          "gnome-shell": [
            "./gnome-shell"
          ]
        },
    },
    "include": [
      "extension/**/*.ts",
      "extension/**/*.js",
      "scripts/**/*.ts",
      "gnome-shell/*.d.ts",
      "tests/**/*.ts"
    ]
}
